{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "DJANGO_SECRET_KEY": {
      "type": "securestring"
    },
    "DJANGO_DB_PORT": {
      "type": "securestring"
    },
    "DJANGO_DB_HOST": {
      "type": "securestring"
    },
    "DJANGO_DB_USER": {
      "type": "securestring"
    },
    "DJANGO_DB_PASS": {
      "type": "securestring"
    },
    "DJANGO_DB_NAME": {
      "type": "securestring"
    },
    "GO_FTPHOST": {
      "type": "securestring"
    },
    "GO_FTPUSER": {
      "type": "securestring"
    },
    "GO_FTPPASS": {
      "type": "securestring"
    },
    "GO_DBPASS": {
      "type": "securestring"
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('appName'), '-serviceplan')]",
    "appTags": {
      "ds-project": "ifrcgo-infrastructure"
    },
    "apiLocation": "UK West"
  },
  "resources": [{
    "type": "Microsoft.Web/serverfarms",
    "name": "[variables('hostingPlanName')]",
    "apiVersion": "2016-09-01",
    "tags": "[variables('appTags')]",
    "location": "[variables('apiLocation')]",
    "sku": {
      "name": "S1",
      "tier": "Standard",
      "capacity": 1
    },
    "properties": {
      "targetWorkerSizeId": 0,
      "reserved": true,
      "hostingEnvironment": ""
    },
    "kind": "linux"
  },
  {
    "type": "Microsoft.Web/sites",
    "kind": "app,linux",
    "name": "[parameters('appName')]",
    "apiVersion": "2016-08-01",
    "tags": "[variables('appTags')]",
    "location": "[variables('apiLocation')]",
    "properties": {
      "name": "[parameters('appName')]",
      "enabled": true,
      "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
    ],
    "resources": [{
      "name": "appsettings",
      "type": "config",
      "apiVersion": "2016-03-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "tags": {
        "displayName": "appSettings"
      },
      "properties": {
        "DOCKER_CUSTOM_IMAGE_NAME": "developmentseed/ifrc-go-api:0.1.2",
        "DOCKER_CUSTOM_IMAGE_RUN_COMMAND": "runserver.sh",
        "WEBSITES_ENABLE_APP_SERVICE_STORAGE": true,
        "DJANGO_SECRET_KEY": "[parameters('DJANGO_SECRET_KEY')]",
        "DJANGO_DB_HOST": "[parameters('DJANGO_DB_HOST')]",
        "DJANGO_DB_USER": "[parameters('DJANGO_DB_USER')]",
        "DJANGO_DB_PASS": "[parameters('DJANGO_DB_PASS')]",
        "DJANGO_DB_NAME": "[parameters('DJANGO_DB_NAME')]",
        "GO_FTPHOST": "[parameters('GO_FTPHOST')]",
        "GO_FTPUSER": "[parameters('GO_FTPUSER')]",
        "GO_FTPPASS": "[parameters('GO_FTPPASS')]",
        "GO_DBPASS": "[parameters('GO_DBPASS')]"
      }
    }, {
      "name": "logs",
      "type": "config",
      "apiVersion": "2016-03-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "tags": {
        "displayName": "appSettings"
      },
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Verbose"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "retentionInMb": 40,
            "enabled": true
          }
        },
        "failedRequestsTracing": {
          "enabled": true
        },
        "detailedErrorMessages": {
          "enabled": true
        }
      }
    }]
  }]
}
