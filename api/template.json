{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('appName'), '-serviceplan')]",
    "appTags": {
      "ds-project": "ifrcgo-infrastructure"
    }
  },
  "resources": [{
    "type": "Microsoft.Web/serverfarms",
    "name": "[variables('hostingPlanName')]",
    "apiVersion": "2016-09-01",
    "tags": "[variables('appTags')]",
    "location": "[resourceGroup().location]",
    "sku": {
      "name": "S1",
      "tier": "Standard",
      "capacity": 1
    },
    "properties": {
      "targetWorkerSizeId": 0,
      "reserved": false,
      "hostingEnvironment": ""
    },
    "kind": "linux"
  },
  {
    "type": "Microsoft.Web/sites",
    "kind": "app,linux",
    "name": "[parameters('appName')]",
    "apiVersion": "2016-08-01",
    "tags": "[variables('appTags')]",
    "location": "[resourceGroup().location]",
    "properties": {
      "name": "[parameters('appName')]",
      "enabled": true,
      "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
    ],
    "resources": [{
      "name": "appsettings",
      "type": "config",
      "apiVersion": "2016-03-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "tags": {
        "displayName": "appSettings"
      },
      "properties": {
        "DOCKER_CUSTOM_IMAGE_NAME": "developmentseed/ifrc-go-api:0.1.1",
        "DOCKER_CUSTOM_IMAGE_RUN_COMMAND": "-p 80:80 runserver.sh",
        "WEBSITES_ENABLE_APP_SERVICE_STORAGE": true
      }
    }, {
      "name": "logs",
      "type": "config",
      "apiVersion": "2016-03-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
      ],
      "tags": {
        "displayName": "appSettings"
      },
      "properties": {
        "applicationLogs": {
          "fileSystem": {
            "level": "Verbose"
          }
        },
        "httpLogs": {
          "fileSystem": {
            "retentionInMb": 40,
            "enabled": true
          }
        },
        "failedRequestsTracing": {
          "enabled": true
        },
        "detailedErrorMessages": {
          "enabled": true
        }
      }
    }]
  }]
}
