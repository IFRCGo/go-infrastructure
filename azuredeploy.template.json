{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "gitBranch": {
      "type": "string",
      "metadata": {
        "description": "The current git branch this is running on"
      }
    },
    "dbName": {
      "type": "string"
    },
    "dbAdministratorLogin": {
      "type": "string",
      "minLength": 1
    },
    "dbAdministratorLoginPassword": {
      "type": "securestring",
      "minLength": 8,
      "maxLength": 128
    },
    "apiName": {
      "type": "string"
    },
    "DJANGO_SECRET_KEY": {
      "type": "securestring"
    },
    "DJANGO_DB_PORT": {
      "type": "securestring"
    },
    "DJANGO_DB_HOST": {
      "type": "securestring"
    },
    "GO_FTPHOST": {
      "type": "securestring"
    },
    "GO_FTPUSER": {
      "type": "securestring"
    },
    "GO_FTPPASS": {
      "type": "securestring"
    },
    "GO_DBPASS": {
      "type": "securestring"
    }
  },
  "variables": {
    "rawUrl": "https://raw.githubusercontent.com/IFRCGo/go-infrastructure/",
    "baseTemplateUrl": "[concat(variables('rawUrl'), parameters('gitBranch'), '/')]",
    "pgsqlTemplate": "[concat(variables('baseTemplateUrl'), 'postgresql/template.json')]",
    "apiTemplate": "[concat(variables('baseTemplateUrl'), 'api/template.json')]"
  },
  "resources": [{
    "apiVersion": "2017-05-10",
    "name": "linkedPgsqlTemplate",
    "type": "Microsoft.Resources/deployments",
    "properties": {
      "mode": "incremental",
      "templateLink": {
        "uri": "[variables('pgsqlTemplate')]",
        "contentVersion": "1.0.0.0"
      },
      "parameters": {
        "appName": {
          "value": "[parameters('dbName')]"
        },
        "administratorLogin": {
          "value": "[parameters('dbAdministratorLogin')]"
        },
        "administratorLoginPassword": {
          "value": "[parameters('dbAdministratorLoginPassword')]"
        }
      }
    }
  }, {
    "apiVersion": "2017-05-10",
    "name": "linkedApiTemplate",
    "type": "Microsoft.Resources/deployments",
    "properties": {
      "mode": "incremental",
      "templateLink": {
        "uri": "[variables('apiTemplate')]",
        "contentVersion": "1.0.0.0"
      },
      "parameters": {
        "appName": {
          "value": "[parameters('apiName')]"
        },
        "DJANGO_SECRET_KEY": {
          "value": "[parameters('DJANGO_SECRET_KEY')]"
        },
        "DJANGO_DB_PORT": {
          "value": "[parameters('DJANGO_DB_PORT')]"
        },
        "DJANGO_DB_HOST": {
          "value": "[parameters('DJANGO_DB_HOST')]"
        },
        "DJANGO_DB_USER": {
          "value": "[parameters('dbAdministratorLogin')]"
        },
        "DJANGO_DB_PASS": {
          "value": "[parameters('dbAdministratorLoginPassword')]"
        },
        "DJANGO_DB_NAME": {
          "value": "[concat(parameters('dbName'), '-server')]"
        },
        "GO_FTPHOST": {
          "value": "[parameters('GO_FTPHOST')]"
        },
        "GO_FTPUSER": {
          "value": "[parameters('GO_FTPUSER')]"
        },
        "GO_FTPPASS": {
          "value": "[parameters('GO_FTPPASS')]"
        },
        "GO_DBPASS": {
          "value": "[parameters('GO_DBPASS')]"
        }
      }
    }
  }]
}
